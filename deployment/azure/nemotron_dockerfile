# Dockerfile for Nemotron Parse inference server (GPU-enabled)
# Requires NVIDIA GPU with at least 16GB VRAM (24GB+ recommended)

FROM nvcr.io/nvidia/pytorch:24.01-py3

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Install additional Nemotron-specific dependencies
RUN pip install --no-cache-dir \
    transformers>=4.40.0 \
    accelerate>=0.30.0 \
    peft>=0.11.0 \
    bitsandbytes>=0.43.0 \
    sentencepiece>=0.2.0 \
    flash-attn --no-build-isolation

# Optional: Install vLLM for efficient inference
# Uncomment if using vLLM backend
# RUN pip install --no-cache-dir vllm>=0.4.0

# Copy application code
COPY src/ ./src/
COPY config/ ./config/
COPY trained_models/ ./trained_models/ 2>/dev/null || true

# Set Python path
ENV PYTHONPATH=/app

# Environment variables for model configuration
ENV MODEL_VERSION=1.0.0
ENV NEMOTRON_MODEL_ID=nvidia/NVIDIA-Nemotron-Parse-v1.1
ENV USE_FLASH_ATTENTION=true
ENV TORCH_DTYPE=bfloat16

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=120s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/health', timeout=10)"

# Run the Nemotron inference server
CMD ["python", "-m", "src.serving.nemotron_server", "--host", "0.0.0.0", "--port", "8000"]

